[Unit]
Description=Server Admin Application
After=network.target

[Service]
Type=simple
User=serveradmin
Group=serveradmin
WorkingDirectory=/opt/ubuntu-server-admin
ExecStart=/opt/ubuntu-server-admin/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target